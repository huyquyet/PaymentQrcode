<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.payment_qrcode.ui.screen.wallet.BaseViewHolderWallet" />

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />
    </data>

    <LinearLayout
        clickSafe="@{() -> viewModel.clickMore()}"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_wallet_img_icon"
            loadImage="@{viewModel.lvdImageResource}"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="@dimen/dp_160"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10">

            <com.example.payment_qrcode.ui.widgets.CustomTextView
                android:id="@+id/item_wallet_txt_name"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.lvdWalletName}"
                android:textSize="@dimen/sp_18"
                android:layout_marginTop="@dimen/dp_2"/>

            <com.example.payment_qrcode.ui.widgets.CustomTextView
                android:id="@+id/item_wallet_txt_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@{viewModel.lvdWalletDescription}"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical">

            <com.example.payment_qrcode.ui.widgets.CustomTextView
                android:id="@+id/txt_price"
                textColor="@{ viewModel.colorPrice }"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@{ viewModel.lvdWalletPrice }"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <com.example.payment_qrcode.ui.widgets.CustomTextView
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@{ viewModel.lvdWalletReason }"
                android:textSize="@dimen/sp_12"
                android:visibility="@{TextUtils.isEmpty(viewModel.lvdWalletReason) ? View.GONE : View.VISIBLE}" />

        </LinearLayout>


        <ImageView
            android:id="@+id/item_wallet_img_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_2"
            android:src="@drawable/ic_more"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>
</layout>